<?xml version="1.0" encoding="utf-8"?>
<com.laimiux.youtubeplayerexample.BasicYouTubeListItemView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp">


    <ImageView
        android:id="@+id/youtube_video_thumbnail"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/youtube_video_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginStart="10dp"
        android:textColor="@color/youtube_title_text"
        android:layout_toEndOf="@+id/youtube_video_thumbnail"
        android:layout_toRightOf="@+id/youtube_video_thumbnail"
        android:ellipsize="end"
        android:maxLines="2"
        />

    <TextView
        android:id="@+id/youtube_video_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/youtube_video_title"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/youtube_description_text"
        android:layout_toEndOf="@+id/youtube_video_thumbnail"
        android:layout_toRightOf="@+id/youtube_video_thumbnail"
        android:ellipsize="end"
        android:maxLines="3"
        />
</com.laimiux.youtubeplayerexample.BasicYouTubeListItemView>